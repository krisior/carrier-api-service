<!DOCTYPE html>
<html lang="pl-PL">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>carrier database API</title>
    <link rel="stylesheet" href="/css/101996-api.css" />
    <link rel="stylesheet" href="/css/101997-crt-upd.css" />
    <link rel="stylesheet" href="/css/102871-det.css" />
    <link rel="stylesheet" href="/css/103998-tab.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body id="main-wrapper"
    <% if (openPopUp) { %> 
        style = "overflow-y: hidden" 
    <% } else { %>
        style = "overflow-y: auto"
    <% } %>
>
    <div class="go-back">
        <a href="/"><p>powrót</p></a>
    </div>

    <h1>API bazy danych <i class="carrier-adnotation">przewoźnik</i></h1>
    <h6>dane stacyjne</h6>
    <br>

    <div class="popup-created" 
        <% if (openPopUp) { %> 
            style = "display: grid" 
        <% } else { %>
            style = "display: none"
        <% } %>
    >
        <div class="inner">
            <span class="message-box"><%= message %></span>&emsp14;&emsp14;&emsp14;
            <span class="confirm-close-popup"><a href="/stations"><button id="reload-after-pop-up">OK</button></a></span>
        </div>
        <br>
    </div>
    
    <div class="search-create-wrapper">
        <span class="search-box">
            <input type="text" id="search-input-stations" placeholder="nazwa stacji / identyfikator stacji">
        </span>
        <span class="create-station-box">
            <a href="/create-station"><button>nowa stacja</button></a>&emsp14;
            <a href="/update-station">
                <button>modyfikuj istniejące dane stacyjne<br>
                    <span style="font-size: 0.4rem"><i>przygotuj identyfikator stacji</i></span>
                </button>
            </a>
        </span>
    </div>

    <br>

    <!-- LIST ITSELF -->
    <div class="list" id="stations-list">
        <table>
            <tr>
                <th style="width: 220px">identyfikator stacji</th>
                <th style="width: 378px">nazwa stacji</th>
                <th style="width: 338px"></th>
                <th style="width: 75px"><span style="font-size: 0.35rem">(UIC-01-2023-008)</span></th>
                <th style="width: 40px; border-bottom: none"></th>
            </tr>

            <% stationsList.forEach(station => { %>
                <tr class="list-row">
                    <td class="list-update-hover id-congr"><%= station.s_id %></td>
                    <td class="list-update-hover"><%= station.name %></td>
                    <td class="list-update-hover"><%= station.upper %></td>
                    <td class="list-update-hover weight-congr"><%= station.weight %></td>
                    <td class="list-icons" style="padding-left: 0">
                        <span>
                            <form method="POST" action="/stations">
                                <input type="hidden" name="s_id" value="<%= station.s_id %>">
                                <button type="submit"><i class="fa-solid fa-trash"></i></button>
                            </form>
                        </span>
                    </td>
                </tr>
            <% }) %>
            
        </table>
    </div>

    <br>
    <div class="footer">
        <div>ostatnia aktualizacja: 15.02.2023</div>
        <div>copyright © 2023</div>
    </div>

    <script type="text/javascript" src="/script/20123-stations.js" ></script>

</body>
</html>